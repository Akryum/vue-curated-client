@import "~style/imports";
@import "./transitions";

body {
  margin: 0;
  font-family: 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

html,
body,
#app {
  height: 100%;
  overflow: hidden;
}

.emojione {
  width: 1em;
  height: 1em;
  vertical-align: middle;
}

a
  color $primary-color
  text-decoration none
  cursor pointer
  display inline-flex
  align-items center

  .vue-icon
    &:first-child
      margin-right 4px
    &:last-child
      margin-left 4px
    &:first-child:last-child
      margin 0
    svg
      fill @color

  &:hover
    color lighten($primary-color, 30%)
    .vue-icon
      svg
        fill @color

.fab {
  position: fixed;
  z-index: 1;
  bottom: 24px;
  right: 18px;
  font-size: 24px;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 10px rgba(black, .3);
}

.hero,
.empty {
  color: $md-grey-400;
  text-align: center;
  padding: 24px;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

  &.fill {
    height: 100%;
  }
}

.empty {
  .vue-icon {
    margin-right 4px
  }

  @media ({$small-screen}) {
    font-size: 22px;

    .vue-icon {
      width @font-size
      height @width
    }
  }
}

.hero {
  font-size: 24px;

  > .icon {
    font-size: 42px;
    opacity: .5;
  }
}

.markdown {
  img {
    max-width: 100%;
  }

  :first-child {
    margin-top: 0;
  }

  blockquote {
    border-left: solid 6px $primary-color;
    margin-left: 0;
    padding: 6px 12px;

    :last-child {
      margin-bottom: 0;
    }
  }

  code,
  pre {
    background: darken(white, 5%);
    border-radius: 2px;
    color: darken($primary-color, 50%);
  }

  code {
    padding: 0 2px;
  }

  pre {
    padding: 12px;
    overflow-x: auto;
  }

  hr {
    border: none;
    border-top: solid 1px rgba($primary-color, .5);
  }

  ul {
    margin-bottom: 24px;
    padding-left: 24px;
  }

  li {
    margin: 10px 0;
  }
}

.page-content {
  section {
    margin: 12px;
  }
}

.badges,
.badge-group {
  display: inline-flex;
  align-items: center;
}

.badge {
  display: inline-flex;
  align-items center
  padding: 2px 4px;
  border-radius: 3px;
  font-size: 12px;
  color: white;
  background: grey;
  vertical-align: text-top;
  min-height 19px
  box-sizing border-box

  .vue-icon {
    svg {
      fill @color
    }
  }
}

.badge,
.badge-group {
  &:not(:last-child) {
    margin-right: 4px;
  }
}

.badge-group {
  .badge {
    background: lighten($primary-color, 15%);
    margin-right: 0;

    &:not(:last-child) {
      border-right: solid 1px white;
    }

    &:first-child {
      border-radius: 3px 0 0 3px;
    }

    &:last-child {
      border-radius: 0 3px 3px 0;
      background: $primary-color;
    }

    &:first-child:last-child {
      border-radius: 3px;
    }
  }
}

// Mobile

@media ({$not-small-screen}) {
  .mobile-only {
    display: none;
  }
}
